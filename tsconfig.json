{
  "compilerOptions": {
    // Diretórios
    "rootDir": "./src",
    "outDir": "./dist",

    // Módulos e target
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Libs para Node
    "lib": ["esnext"],
    "types": ["node"],

    // Mapas e declarações
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type checking mais rigoroso
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // JSX (para front-end, caso use React)
    "jsx": "react-jsx",

    // Outras opções recomendadas
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  }
}
